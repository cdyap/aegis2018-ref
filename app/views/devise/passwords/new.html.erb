<div class="container-fluid" id="login" style="height:100vh">
  <div class="row center-vertical">
    <div class="col-xs-12">
      <h1 class="text-center">Forgot your password?</h1>    
      <br>
    </div>
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      
      <% if notice %>
      <p class="notice text-center"><%= notice %></p>
      <% elsif alert %>
      <p class="alert text-center"><%= alert %></p>
      <%end%>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "center" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="field col-xs-12">
            <h4>Enter your email:</h4>
            <%= f.text_field :email, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class="actions row">
          <br><br>
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default center' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
