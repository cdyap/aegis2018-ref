

<div class="container with-fixed-navbar">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4" id="account-details">
      <div class="row">
        <h4 class="center-align" style="color:green"><%= flash[:success] %></h4>
      </div>
      <div class="row">
        <h3 style="margin-top:30px;margin-bottom:5px;"><%=current_account.student_id %></h3>
        <h2 style="text-transform: capitalize; margin-top:0px;"><%=current_account.name.downcase %><br><br></h2>
      </div>
      <div class="row">
        
        <% if @current_account.full_course.present? %>
          <h4 style="margin-bottom:5px;"><%=current_account.full_course %></h4>
        <% else %>
          <h4 style="margin-top: 0px;">Course:<br><%=current_account.course %></h4>
        <% end %>
        <% if @current_account.minor.present? %>
          <h4>Minor:<br><%=current_account.minor %></h4>
        <% end %>
        <h4>School:<br><%=current_account.school %></h4>
        <% if @current_account.double_major.present? %>
          <h4><%=current_account.double_major %></h4>
        <% end %>
        <br>
        <%# button_to "CHANGE YOUR PASSWORD", edit_account_registration_path, method: :get%>
        <br>
      </div>
      <div class="row">
        <%# button_to "View Account Info", edit_info_accounts_path, method: :get%>
      </div>
    </div>
    <div class="col-xs-12 col-sm-offset-0 col-sm-8">
      <% if current_account.timeslot_id %>
        <%= link_to "", slip_accounts_path(format: 'pdf'), method: :get%>
        <div class="card-index card-success lighter-blue">
          <h3>Photoshoot timeslot</h3>
          <h2 class="text-bold"><%= current_account.get_timeslot %></h2>
          <br>
          <p>You are required to bring a print out of your confirmation slip to your photoshoot.<br>The final timeslot you sign up for will be followed.</p>
          <br>
          <br>
          <div class="float-left" style="margin-right:20px; margin-bottom:10px;">
            <%= button_to "PRINT SLIP", slip_accounts_path(format: 'pdf'), method: :get%>
          </div>
          <% if current_account.can_login %>
          <div class="float-left lighter-blue" style="margin-bottom: 10px;">
            <button class="lighter" id="reschedule-btn" data-toggle="modal" data-target="#reschedule">RESCHEDULE</button>
          </div>
          <% end %>
          <div class="modal fade bs-example-modal-sm" id="reschedule" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
              <div class="modal-dialog modal-md" role="document">
                
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  </div>
                  <div class="modal-body">
                    <h2 class="center-align" style="margin-top:0px;line-height:1.3em;">Are you sure you want<br>to reschedule?</span></h2>
                    <br>
                    <h4 class="text-center" style="line-height:1.5em;">You will be removed from your original timeslot<br>before you pick another timeslot.</h4>
                    <div class="row text-center" style="margin-top:30px;">
                      <div class="float-left" style="margin-right:20px;">
                      <%= button_to "YES", reschedule_accounts_path, method: :get%>
                      </div>
                      <div class="float-left">
                        <button class="lighter" data-dismiss="modal" aria-label="Close">CANCEL</button>
                      </div>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
        </div>
      <% else %>
        <div class="card-index card-warning">
          <h2 class="text-bold">No photoshoot timeslot yet!</h2>
          <br><br>
          <%= button_to "SIGN UP", sign_ups_accounts_path, method: :get %>
        </div>
      <% end %>
      <!-- <h3>Yearbook Writeup</h3>
      <%# if current_account.writeup.present? %>
        <h4 style="white-space: pre-line;"><%# current_account.writeup %></h4>
      <%# else %>
        <h4>No Writeup</h4>
      <%# end %> -->
      <% if current_account.groupshot_id %>
        <%= link_to "", groupslip_accounts_path(format: 'pdf'), method: :get%>
        <div class="card-index card-success lighter-blue">
          <h3>Group photoshoot timeslot</h3>
          <h2 class="text-bold"><%= current_account.get_groupslot %></h2>
          <br>
          <p>You are required to bring a print out of your confirmation slip to your photoshoot.<br>The final timeslot you sign up for will be followed.</p>
          <br>
          <br>
          <div class="float-left" style="margin-right:20px; margin-bottom:10px;">
            <%= button_to "PRINT SLIP", groupslip_accounts_path(format: 'pdf'), method: :get%>
          </div>
          <% if current_account.can_signup_for_group %>
          <div class="float-left lighter-blue" style="margin-bottom: 10px;">
            <button class="lighter" id="reschedule-btn" data-toggle="modal" data-target="#reschedule-group">RESCHEDULE</button>
          </div>
          <% end %>
          <div class="modal fade bs-example-modal-sm" id="reschedule-group" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
              <div class="modal-dialog modal-md" role="document">
                
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  </div>
                  <div class="modal-body">
                    <h2 class="center-align" style="margin-top:0px;line-height:1.3em;">Are you sure you want<br>to reschedule your group photoshoot?</span></h2>
                    <br>
                    <h4 class="text-center" style="line-height:1.5em;">You will be removed from your original timeslot<br>before you pick another timeslot.</h4>
                    <div class="row text-center" style="margin-top:30px;">
                      <div class="float-left" style="margin-right:20px;">
                      <%= button_to "YES", reschedule_group_accounts_path, method: :get%>
                      </div>
                      <div class="float-left">
                        <button class="lighter" data-dismiss="modal" aria-label="Close">CANCEL</button>
                      </div>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
        </div>
      <% end %>
      <!-- <h3>Yearbook Writeup</h3>
      <%# if current_account.writeup.present? %>
        <h4 style="white-space: pre-line;"><%# current_account.writeup %></h4>
      <%# else %>
        <h4>No Writeup</h4>
      <%# end %> -->
    </div>
  </div>
</div>