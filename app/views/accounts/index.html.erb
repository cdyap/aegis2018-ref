

<div class="container with-fixed-navbar">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4" id="account-details">
      <div class="row">
        <h4 class="center-align" style="color:green"><%= flash[:success] %></h4>
      </div>
      <div class="row">
        <h3 style="margin-top:30px;margin-bottom:5px;"><%=current_account.student_id %></h3>
        <h2 style="text-transform: capitalize; margin-top:0px;"><%=current_account.name.downcase %></h2>
      </div>
      <div class="row">
        
        <% if @current_account.full_course.present? %>
          <h4 style="margin-bottom:5px;"><%="#{current_account.yr} - " + "#{current_account.full_course}" %></h4>
        <% else %>
          <h4 style="margin-top: 0px;"><%="#{current_account.yr} - " + "#{current_account.course}" %></h4>
        <% end %>
        <h4><%=current_account.school %></h4>
        <% if @current_account.double_major.present? %>
          <h4><%=current_account.double_major %></h4>
        <% end %>
        <% if @current_account.minor.present? %>
          <h4><%=current_account.minor %></h4>
        <% end %>
      </div>
      <div class="row">
        <%# button_to "View Account Info", edit_info_accounts_path, method: :get%>
      </div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-8">
      <% if current_account.timeslot_id %>
        <%= link_to "", slip_accounts_path(format: 'pdf'), method: :get%>
        <div class="card-index card-success">
          <h3>Photoshoot timeslot</h3>
          <h2 class="text-bold"><%= current_account.get_timeslot %></h2>
          <br><br>
          <%= button_to "PRINT CONFIRMATION SLIP", slip_accounts_path(format: 'pdf'), method: :get%>
        </div>
      <% else %>
        <div class="card-index card-warning">
          <h2 class="text-bold">No photoshoot timeslot yet!</h2>
          <br><br>
          <%= button_to "SIGN UP FOR A PHOTOSHOOT", sign_ups_accounts_path, method: :get %>
        </div>
      <% end %>
      <!-- <h3>Yearbook Writeup</h3>
      <%# if current_account.writeup.present? %>
        <h4 style="white-space: pre-line;"><%# current_account.writeup %></h4>
      <%# else %>
        <h4>No Writeup</h4>
      <%# end %> -->
    </div>
  </div>
</div>