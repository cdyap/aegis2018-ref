<div class="container with-fixed-navbar">
  <div class="row">
    <h4 class="center-align" style="color:green"><%= flash[:success] %></h4>
    <h2 class="text-left text-bold">Individual page:</h2>
    <br>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1" style="margin-bottom:30px;">
      <object data="<%= current_account.yearbook_shot %>" type="application/pdf" style="width:100%;height:100vh;" height="100">
      Your browser does not support pdfs, <a href="<%= current_account.yearbook_shot %>">click here to
      download the file.</a>
      </object>
    </div>

    
  </div>
  <hr>
  <div class="row">
    <h2 class="text-left text-bold" style="margin-top:30px;margin-bottom:20px;">Toga pages of your course:</h2>
    <% @togashots.each do |togapage| %>
      
      <div class="col-xs-12 col-sm-10 col-sm-offset-1" style="margin-bottom:30px;">
        <object data="<%= togapage.page_num %>" type="application/pdf" style="width:100%;height:100vh;" height="100">
        Your browser does not support pdfs, <a href="<%= togapage.page_num %>">click here to
        download the file.</a>
        </object>
      </div>


    <% end %>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
      <h2 class="text-left text-bold" style="margin-top:30px;margin-bottom:10px;">Concerns:</h2><br>
      
      <% if current_account.feedback.nil? %>
      
      <p class="text-left">You will only be able to submit a concern once. <br>Please review your concern before submitting. <br>You don't have to submit a concern if you're okay with your yearbook pages already.</p>
      <br>
      
      <form class="form-horizontal concerns-form" action="/accounts/addfeedback" method="POST">
        <p id="error" style="color:red;text-align:center;"></p>
        <div class="col-xs-12">
        <div class="field">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <label for="page_number" style="font-family: 'Montserrat'!important;font-size:16px;">Relevant page number/s:</label>
        <input type="text" name="page_number" class="form-control" required id="page_number">
        <br>
        <br>
        <label for="name" style="font-family: 'Montserrat'!important;font-size:16px;">Name in yearbook:</label>
        <input type="text" name="name" class="form-control" required id="name">
        <br>
        <br>
        <label for="feedback" style="font-family: 'Montserrat'!important;font-size:16px;">Concern:</label>
        <textarea name="feedback" id="" rows="5" class="writeup form-control" style="margin-top:0px;" required id="feedback"></textarea>
        <button type="submit" class="center lighter" style="margin-top:30px;">SAVE FEEDBACK</button>
        </div></div>
      </form>
      <%end%>
    </div>
  </div>
      
</div>