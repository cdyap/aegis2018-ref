<div class="container with-fixed-navbar">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-offset-2">
      <h1>View Account Information</h1>
    </div>
  </div>

  <div class="row edit-info">
    <%= simple_form_for @account, :html => {:class => 'form-horizontal' } do |f| %>
        <% if @account.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>
            <ul>
            <% @account.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :student_id, "ID Number" %>
          </div>
          <div class="col-xs-5">
            <%= current_account.student_id %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :name, "Name" %>
          </div>
          <div class="col-xs-5">
            <%= current_account.name %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :course, "Year" %>
          </div>
          <div class="col-xs-5">
            <%="#{current_account.yr}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :full_course, "Full Course Name (e.g. AB Economics)"  %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.full_course}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :double_major, "Second Major" %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.double_major}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :second_status, "Second Major Status" %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.second_status}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :minor, "Minor/Specialization" %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.minor}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :cellphone_number, "Cellphone Number" %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.cellphone_number}" %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :email, "Email" %>
          </div>
          <div class="col-xs-5">
            <%= "#{current_account.email}" %>
          </div>
        </div>
        <div class="actions col-xs-offset-4 col-xs-6">
          <%= button_to "Back To Main Page", accounts_path, method: :get %>
        </div>
    <% end %>
  </div>
</div>