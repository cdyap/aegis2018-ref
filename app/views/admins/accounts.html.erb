<div class="container with-fixed-navbar admins">
  <div class="row">
    <div class="col-xs-12">
    <h4 class="center-align" style="color: red"><%= flash[:notice] %></h4>
    <h4 class="center-align" style="color: green"><%= flash[:success] %></h4>
    <br>
    <h3 class="center-align">Search</h3>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 search-form">
        <input type="number" name="id" id="search_account">
        <label for="search">ID Number</label>
      </div>
      <div class="col-xs-4 col-xs-offset-4">
        <table class="search-table table">
          <tr>
            <th>Name</th>
            <td id="student-name"></td>
          </tr>
          <tr>
            <th>Year & Course</th>
            <td id="student-yrcrs"></td>
          </tr>
          <tr>
            <th>School</th>
            <td id="student-school"></td>
          </tr>
          <tr>
            <th>Email</th>
            <td id="student-email"></td>
          </tr>
          <tr>
            <th>Conforme</th>
            <td id="student-conforme"></td>
          </tr>
          <tr>
            <th>Feedback</th>
            <td id="student-feedback"></td>
          </tr>
          <!-- <tr>
            <th>Feedback</th>
            <td id="student-writeup" style="white-space: pre-line;"></td>
          </tr> -->
        </table>
        <form action="<%= edit_account_admins_path %>" method="GET" id="edit-account">
          <input type="hidden" name="student_id" id="edit-account-id">
          <button type="submit" class="btn btn-default center">EDIT ACCOUNT</button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h3 class="center-align">Accounts</h3>
      <h4 class="center-align">Number of accounts: <span class="text-bold"><%=@account_number %></span></h4>
      <h4 class="center-align">Number of students: <span class="text-bold"><%= Student.count %></span></h4>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 table-responsive">
      <table class="table-striped table">
        <tr>
          <th class="right-align">Student ID</th>
          <th>Name</th>
          <th>Email</th>
          <th class="right-align">Year</th>
          <th>Course</th>
          <th>School</th>
          <th style="max-width: 150px;">Writeup</th>
          <th style="max-width: 150px;">Feedback</th>
          <th style="max-width: 100px;">Conforme</th>
        </tr>
        <% @accounts.each do |student| %> 
          <tr>
            <td class="right-align"><%= student.student_id %></td>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td class="right-align"><%= student.yr %></td>
            <td><%= student.course %></td>
            <td><%= student.school %></td>
            <td style="white-space: pre-line;"><%= student.writeup %></td>
            <td><%= student.feedback %></td>
            <td><%= student.conforme %></td>
          </tr>
        <% end %>
      </table>
      
    </div>
  </div>
  <div class="row">
    <div class="flex col-xs-12"><%= will_paginate @accounts %></div>
  </div>
</div>
