<div class="container-fluid admins" id="login">
  <div class="row center-vertical">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      <div class="col-xs-12">
        <h1 class="text-center">Admin Area</h1>
        <h3 class="text-center">Aegis 2018</h3>
      </div>
      <% if notice %>
      <p class="notice text-center"><%= notice %></p>
      <% elsif alert %>
      <p class="alert text-center"><%= alert %></p>
      <%end%>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "center"}) do |f| %>
        <%= devise_error_messages! %>
          <div class="row">
            <div class="field col-xs-12">
                <h4>Email:</h4>
                <%= f.text_field :email, required: false, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="field col-xs-12">
                <h4>Password:</h4>
                <%= f.password_field :password, required: false, class: "form-control" %>
            </div>
          </div>
             <div class="row">
                <div class="field col-xs-12">
                    <% if devise_mapping.rememberable? -%>
                    <div class="row" style="margin-bottom:40px;">
                      <div class="field flex">
                        <%= f.check_box :remember_me, style: "float: left;" %>
                        <%= f.label :remember_me, class: "checkbox-inline", style: "float:left;margin-top:5px;font-weight:400"%>
                      </div>
                    </div>
                  <% end -%>
                </div>
             </div>

        <div class="actions row">
          <%= f.submit "LOGIN", class: "btn btn-default center" %>
        </div>
        <div class="row links text-center">
          <%= render "admins/shared/links" %> 
          <br>
        </div>
        
      <% end %>

    </div>
  </div>
</div>




