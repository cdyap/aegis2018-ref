
<div class="container with-fixed-navbar">
  <div class="row">
    <div class="col-xs-12">
    <h3 class="center-align">Search</h3>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 search-form">
        <input type="number" name="id" id="search_student">
        <label for="search">ID Number</label>
      </div>
      <div class="col-xs-4 col-xs-offset-4">
        <table class="search-table table">
          <tr>
            <th>Name</th>
            <td id="student-name"></td>
          </tr>
          <tr>
            <th>Year & Course</th>
            <td id="student-yrcrs"></td>
          </tr>
          <tr>
            <th>School</th>
            <td id="student-school"></td>
          </tr>
          <tr>
            <th>With account?</th>
            <td id="student-account"></td>
          </tr>
          <tr>
            <th>Yearbook page number</th>
            <td id="student-yrbookpage"></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-xs-12">
      <h3 class="center-align">Students</h3>
      <table class="table-striped table">
        <tr>
          <th class="right-align">Student ID</th>
          <th>Name</th>
          <th class="right-align">Year</th>
          <th>Course</th>
          <th>School</th>
          <th class="right-align">Page number</th>
          <th class="right-align">Exists?</th>
        </tr>
        <% @students.each do |student| %> 
          <tr class=<%=student.account ? "success":"warning" %>>
            <td class="right-align"><%= student.id %></td>
            <td><%= student.name.html_safe %></td>
            <td class="right-align"><%= student.yr %></td>
            <td><%= student.course %></td>
            <td><%= student.school %></td>
            <td class="right-align"><%= student.page_number %></td>
            <% if !student.page_number.nil? %>
            <td><%=File::exist?("public/pics/"+student.page_number+".pdf")%></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      
    </div>
  </div>
  <div class="row">
    <div class="flex col-xs-12"><%= will_paginate @students %></div>
  </div>
</div>


